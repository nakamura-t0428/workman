{
  "version": "1.5.3",
  "sortOutput": true,
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "filesGlob": [
    "./**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "exclude": [
    "node_modules",
    "bower_components"
  ]

}
